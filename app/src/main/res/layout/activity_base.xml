<!-- Layout activity_base.xml includes: FloatingActionButton, FrameLayout, LinearLayout, include. Uses the following libraries: Google Material Components library. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="0dp">

        <include
            android:id="@+id/top_bar"
            layout="@layout/top_bar_layout"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/activity_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <include
            android:id="@+id/bottom_bar"
            layout="@layout/bottom_bar_layout"
            android:visibility="visible" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_emergency"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="39dp"
        android:src="@drawable/emergency"
        android:contentDescription="@string/emergency_button"
        android:backgroundTint="@color/blue_gradient_start"
        android:tint="@android:color/white"
        android:elevation="12dp" />
</FrameLayout>
