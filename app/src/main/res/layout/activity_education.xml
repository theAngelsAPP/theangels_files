<?xml version="1.0" encoding="utf-8"?>
<!-- Layout activity_education.xml includes: Chip, ChipGroup, FrameLayout, LinearLayout, ListView, LottieAnimationView, MaterialCardView, TextView. Uses the following libraries: Google Material Components library, Airbnb Lottie library. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@android:color/white"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#F9F9F9">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:lottie_rawRes="@raw/bgballons"
                app:lottie_autoPlay="true"
                app:lottie_loop="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp"
                android:gravity="center_horizontal">

            <TextView
                android:id="@+id/banner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/education_banner_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filter_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                app:singleSelection="false"
                app:singleLine="true"
                app:chipSpacingHorizontal="4dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_medical"
                    style="@style/EducationChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    app:checkedIconVisible="false"
                    android:text="רפואי"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_security"
                    style="@style/EducationChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    app:checkedIconVisible="false"
                    android:text="ביטחוני"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_car"
                    style="@style/EducationChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    app:checkedIconVisible="false"
                    android:text="רכב"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_animals"
                    style="@style/EducationChipStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="false"
                    app:checkedIconVisible="false"
                    android:text="בעלי חיים"/>
            </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <ListView
        android:id="@+id/educations_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/pagination_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layoutDirection="ltr"/>

</LinearLayout>
